<div class="modern-container">
    <h1>Inventory Management</h1>
    <% if (typeof messages !=='undefined' && messages.length) { %>
        <div class="flash-message">
            <% messages.forEach(function(message) { %>
                <p>
                    <%= message %>
                </p>
                <% }) %>
        </div>
        <% } %>
            <ul class="inventory-management-list">
                <li><a href="/inv/add-classification">Add New Classification</a></li>
                <li><a href="/inv/add-inventory">Add New Inventory</a></li>
            </ul>
            <div class="inventory-instructions">
                <h2>Manage Inventory</h2>
                <p>Select a classification from the list to see items belonging to that classification.</p>
            </div>
            <div>
                <%- classificationList %>
            </div>
            <div id="loadingSpinner" class="loading-spinner">
                <div class="spinner"></div>
                <div class="loading-text">Loading inventory...</div>
            </div>
            <table id="inventoryDisplay"></table>
            <noscript>JavaScript must be enabled to use this page.</noscript>
            <script src="../../js/inventory.js"></script>
</div>