<div class="modern-container">
    <h1>Add New Inventory Item</h1>

    <% if (typeof messages !=='undefined' && messages.length) { %>
        <div class="flash-message">
            <% messages.forEach(function(message) { %>
                <p>
                    <%= message %>
                </p>
                <% }) %>
        </div>
        <% } %>
            <% if (typeof errors !=='undefined' && errors.length) { %>
                <div class="error-message">
                    <% errors.forEach(function(error) { %>
                        <p>
                            <%= error %>
                        </p>
                        <% }) %>
                </div>
                <% } %>

                    <form action="/inv/add-inventory" method="post" id="addInventoryForm" class="modern-form">
                        <label for="classificationList">Classification</label>
                        <%- classificationList %>

                            <label for="inv_make">Make</label>
                            <input name="inv_make" id="inv_make" type="text" required
                                value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">

                            <label for="inv_model">Model</label>
                            <input name="inv_model" id="inv_model" type="text" required
                                value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">

                            <label for="inv_year">Year</label>
                            <input name="inv_year" id="inv_year" type="number" min="1900" max="2099" required
                                value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">

                            <label for="inv_description">Description</label>
                            <textarea name="inv_description" id="inv_description"
                                required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>

                            <label for="inv_image">Image Path</label>
                            <input name="inv_image" id="inv_image" type="text" required
                                value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/vehicles/no-image.png' %>">

                            <label for="inv_thumbnail">Thumbnail Path</label>
                            <input name="inv_thumbnail" id="inv_thumbnail" type="text" required
                                value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/vehicles/no-image-tn.png' %>">

                            <label for="inv_price">Price</label>
                            <input name="inv_price" id="inv_price" type="number" step="0.01" min="0" required
                                value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">

                            <label for="inv_miles">Miles</label>
                            <input name="inv_miles" id="inv_miles" type="number" min="0" required
                                value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">

                            <label for="inv_color">Color</label>
                            <input name="inv_color" id="inv_color" type="text" required
                                value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">

                            <button type="submit">Add Inventory</button>
                    </form>
</div>