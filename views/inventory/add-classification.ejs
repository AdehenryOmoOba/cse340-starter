<div class="modern-container">
    <h1>Add New Classification</h1>

    <% if (typeof messages !=='undefined' && messages.length) { %>
        <div class="flash-message">
            <% messages.forEach(function(message) { %>
                <p>
                    <%= message %>
                </p>
                <% }) %>
        </div>
        <% } %>
            <% if (typeof errors !=='undefined' && errors.length) { %>
                <div class="error-message">
                    <% errors.forEach(function(error) { %>
                        <p>
                            <%= error %>
                        </p>
                        <% }) %>
                </div>
                <% } %>

                    <form action="/inv/add-classification" method="post" id="addClassificationForm" class="modern-form">
                        <label for="classification_name">Classification Name</label>
                        <input name="classification_name" id="classification_name" type="text" required
                            pattern="^[A-Za-z0-9]+$"
                            value="<%= typeof classification_name !== 'undefined' ? classification_name : '' %>">
                        <small>No spaces or special characters allowed.</small>
                        <button type="submit">Add Classification</button>
                    </form>
</div>