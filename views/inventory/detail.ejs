<h1>
    <%= vehicle.inventory_make %>
        <%= vehicle.inventory_model %>
</h1>
<div class="vehicle-detail-wrapper">
    <% if (!vehicle.inventory_image || vehicle.inventory_image.includes('no-image')) { %>
        <div class="no-image-placeholder">
            <span>no image</span>
        </div>
        <% } else { %>
            <img src="<%= vehicle.inventory_image %>" alt="<%= vehicle.inventory_make %> <%= vehicle.inventory_model %>"
                class="vehicle-detail-img"
                onerror="this.onerror=null;this.style.display='none';this.insertAdjacentHTML('afterend', '<div class=\'no-image-placeholder\'><span>no image</span></div>');">
            <% } %>
                <div class="vehicle-detail-info">
                    <h2>
                        <%= vehicle.inventory_year %>
                            <%= vehicle.inventory_make %>
                                <%= vehicle.inventory_model %>
                    </h2>
                    <p class="vehicle-detail-price">
                        <%= Number(vehicle.inventory_price).toLocaleString('en-US', { style: 'currency' ,
                            currency: 'USD' }) %>
                    </p>
                    <p><strong>Mileage:</strong>
                        <%= Number(vehicle.inventory_miles).toLocaleString('en-US') %> miles
                    </p>
                    <p><strong>Color:</strong>
                        <%= vehicle.inventory_color %>
                    </p>
                    <p>
                        <%= vehicle.inventory_description %>
                    </p>
                </div>
</div>