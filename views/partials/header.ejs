<header id="top-header" role="banner" style="display: flex; align-items: center; justify-content: space-between;">
    <span class="siteName">
        <a href="/" title="Return to home page" aria-label="CSE Motors - Return to home page">CSE Motors</a>
    </span>
    <div id="tools" role="navigation" aria-label="Account tools" style="display: flex; align-items: center; gap: 1rem;">
        <% if (typeof loggedin !=='undefined' && loggedin && typeof accountData !=='undefined' &&
            accountData.account_firstname) { %>
            <% if (accountData.account_type==='Client' ) { %>
                <a href="/messages/new" class="feedback-btn"
                    style="background: #6366f1; color: #fff; border: none; border-radius: 0.4rem; padding: 0.4rem 1rem; font-weight: 500; text-decoration: none; margin-right: 0.5rem;">Send
                    Feedback</a>
                <% } else if (accountData.account_type==='Admin' ) { %>
                    <a href="/messages" class="feedback-btn"
                        style="background: #6366f1; color: #fff; border: none; border-radius: 0.4rem; padding: 0.4rem 1rem; font-weight: 500; text-decoration: none; margin-right: 0.5rem;">View
                        Feedbacks</a>
                    <% } %>
                        <a href="/account/" title="Account Management" aria-label="Access your account management"
                            style="font-weight: 500; color: #0050b3; text-decoration: none;">Welcome <%=
                                accountData.account_firstname %></a>
                        <form action="/account/logout" method="post" style="display: inline; margin: 0;">
                            <button type="submit"
                                style="background: #e74c3c; color: #fff; border: none; border-radius: 0.4rem; padding: 0.4rem 1rem; font-weight: 500; cursor: pointer;">Logout</button>
                        </form>
                        <% } else { %>
                            <a title="Click to log in" href="/account/login" aria-label="Access your account">My
                                Account</a>
                            <% } %>
    </div>
</header>