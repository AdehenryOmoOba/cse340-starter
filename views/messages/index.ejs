<div class="messages-container">
    <div class="messages-card">
        <h1>All User Feedback</h1>
        <% if (messages && messages.length> 0) { %>
            <div class="table-responsive">
                <table class="messages-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>User</th>
                            <th>Email</th>
                            <th>Message</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% messages.forEach(function(msg) { %>
                            <tr>
                                <td>
                                    <%= new Date(msg.created_at).toLocaleString() %>
                                </td>
                                <td>
                                    <%= msg.account_firstname %>
                                        <%= msg.account_lastname %>
                                </td>
                                <td>
                                    <%= msg.account_email %>
                                </td>
                                <td>
                                    <%= msg.message_text %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
            <% } else { %>
                <p>No feedback messages found.</p>
                <% } %>
    </div>
</div>
<style>
    .messages-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        min-height: 60vh;
        background: linear-gradient(120deg, #f8fafc 0%, #e0e7ef 100%);
    }

    .messages-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);
        padding: 2.5rem 2rem 2rem 2rem;
        max-width: 900px;
        width: 100%;
    }

    .messages-card h1 {
        font-size: 1.6rem;
        margin-bottom: 1.5rem;
        color: #2d3748;
        text-align: center;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .messages-table {
        width: 100%;
        border-collapse: collapse;
        background: #f9fafb;
        border-radius: 8px;
        overflow: hidden;
    }

    .messages-table th,
    .messages-table td {
        padding: 0.9rem 0.7rem;
        text-align: left;
        border-bottom: 1px solid #e5e7eb;
    }

    .messages-table th {
        background: #6366f1;
        color: #fff;
        font-weight: 600;
    }

    .messages-table tr:nth-child(even) {
        background: #e0e7ef;
    }

    .messages-table tr:hover {
        background: #c7d2fe;
    }

    @media (max-width: 700px) {
        .messages-card {
            padding: 1.2rem 0.5rem;
        }

        .messages-table th,
        .messages-table td {
            padding: 0.6rem 0.3rem;
            font-size: 0.95rem;
        }
    }
</style>